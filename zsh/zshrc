  source "${ZDOTDIR:-$HOME}/.zprezto/init.zsh"
fi
bindkey "jk" vi-cmd-mode
bindkey -M vicmd '/' history-incremental-search-backward

# bolt fonts in terminal
export LSCOLORS=ExFxBxDxCxegedabagacad

#alias ipython='ipython --pylab'
